<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/amber"
    tools:context="com.cashlo.socialalarm.fragment.GreetingSelectionFragment">

    <TextView
        android:id="@+id/greeting_selection_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="10dp"
        android:text="@string/select_a_greeting"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:background="@color/amber"/>

    <TextView
        android:id="@+id/greeting_selection_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="18sp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/black"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:text="@string/next"/>
    <ListView
        android:id="@+id/greeting_list"
        android:layout_width="match_parent"
        android:layout_below="@id/greeting_selection_title"
        android:layout_above="@id/greeting_selection_next"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:dividerHeight="0dp"
        android:divider="@null"
        android:layout_height="wrap_content">

    </ListView>
</RelativeLayout>
